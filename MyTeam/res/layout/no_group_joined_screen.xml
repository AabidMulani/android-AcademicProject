<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mt_mainbackground"
    android:fillViewport="true" >

        <TextView
            android:id="@+id/NGJS_Header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/main_back_blue12"
            android:gravity="center"
            android:text="@string/NoTeam_msg"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/MyTeam_HeaderColor" />

        <Button
            android:id="@+id/NGJS_Join_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_bk_theme"
        	android:textColor="@color/MyTeam_ButtonColor"
        	android:padding="20dip"
            android:layout_margin="10dip"
            android:text="@string/JoinNow_msg"
            android:visibility="visible" />

        <TextView
            android:id="@+id/NGJS_Tailor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="@string/CompleteThisStep_msg"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/MyTeam_TextColor" />

        <ScrollView
            android:visibility="gone"
            android:id="@+id/NGJS_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/NGJS_Tailor"
            android:layout_below="@+id/NGJS_Header"
            android:fillViewport="true"
            android:padding="5dip"
            android:background="@drawable/mt_mainbackground"
            
        android:scrollbarAlwaysDrawHorizontalTrack="true">

            <LinearLayout
                android:id="@+id/NGJS_GroupList_linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
</RelativeLayout>