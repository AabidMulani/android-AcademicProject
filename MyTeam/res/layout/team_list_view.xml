<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mt_mainbackground" >

    <!-- REPLACE ### with the xml initials -->

    <LinearLayout
        android:id="@+id/TLV_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip" >

        <Button
            android:id="@+id/TLV_Home_Btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/home_icon_theme" />

        <Button
            android:id="@+id/TLV_Task_Btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/task_icon_theme" />

        <Button
            android:id="@+id/TLV_Team_Btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/team_icon_theme" />

        <Button
            android:id="@+id/TLV_More_Btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/more_icon_theme" />

        <Button
            android:id="@+id/TLV_chat_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/chat_icon1_theme" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TLV_menu_layout"
        android:layout_below="@+id/TLV_Header"
        android:layout_margin="5dip"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/TLV_ListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dip"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/TLV_Header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_back_blue12"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/TEAM_msg"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/MyTeam_HeaderColor"/>

</RelativeLayout>