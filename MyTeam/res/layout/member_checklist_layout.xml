<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MCL_member_MainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_inflate_background" >

    <CheckBox
        android:id="@+id/MCL_membercheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/MCL_memberImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/MCL_memberNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/MyTeam_TextColor"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:singleLine="true" />

        <TextView
            android:id="@+id/MCL_memberDesignTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/MyTeam_TextColor"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:singleLine="true"/>
    </LinearLayout>

</LinearLayout>