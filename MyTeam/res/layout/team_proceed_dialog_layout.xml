<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Black"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/TPDL_Call_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dip"
        android:background="@drawable/proceed_bk" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/TPDL_mobile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@+id/imageView1"
                android:textColor="@color/MyTeam_TextColor" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/call_icon" />

        </RelativeLayout>

    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/TPDL_Email_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TPDL_Call_Layout"
        android:layout_margin="3dip"
        android:paddingBottom="10dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:background="@drawable/proceed_bk" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:src="@drawable/mail_icon" />

            <TextView
                android:id="@+id/TPDL_mail_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView2"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/MyTeam_TextColor" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>