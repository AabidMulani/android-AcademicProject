<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/Black"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/SBDL_Start_Date_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/UnsetDate_msg"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/MyTeam_TextColor" />

        <Button
            android:id="@+id/SBDL_Start_Date_Btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bk_theme"
            android:padding="10dip"
            android:textColor="@color/MyTeam_ButtonColor"
            android:nextFocusDown="@+id/ATL_End_Date_Btn"
            android:text="@string/StartDt_msg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/SBDL_End_Date_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/UnsetDate_msg"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/MyTeam_TextColor" />

        <Button
            android:id="@+id/SBDL_End_Date_Btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textColor="@color/MyTeam_ButtonColor"
            android:background="@drawable/button_bk_theme"
            android:text="@string/EndDt_msg" />
    </LinearLayout>

</LinearLayout>