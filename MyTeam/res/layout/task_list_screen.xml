<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mt_mainbackground"
    android:orientation="vertical" >

   <LinearLayout
        android:id="@+id/TLS_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip" >

        <Button
            android:id="@+id/TLS_Home_Btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/home_icon_theme" />

        <Button
            android:id="@+id/TLS_Task_Btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/task_icon_theme" />

        <Button
            android:id="@+id/TLS_Team_Btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/team_icon_theme" />

        <Button
            android:id="@+id/TLS_More_Btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/more_icon_theme" />

        <Button
            android:id="@+id/TLS_chat_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@drawable/chat_icon1_theme" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/TLS_MainScroll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/TLS_SortBtn"
        android:layout_below="@+id/TLS_Header"
		android:padding="15dp"
        android:foregroundGravity="center"
        android:scrollbarSize="7dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/TLS_Scroll_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <Button
                android:id="@+id/TLS_MoreBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_bk_theme"
                android:textColor="@color/MyTeam_ButtonColor"
                android:text="@string/MoreTask_msg" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/TLS_Header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="7dip"
        android:background="@drawable/main_back_blue12"
        android:gravity="center"
        android:text="@string/TASK_msg"
        android:textColor="@color/MyTeam_HeaderColor"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/TLS_SortBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TLS_menu_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dip"
        android:background="@drawable/button_bk_theme"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:textColor="@color/MyTeam_ButtonColor"
        android:text="@string/Sort_msg" />

</RelativeLayout>