<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_inflate_background" >

    <TextView
        android:id="@+id/GLI_Leader_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="18dip"
        android:paddingTop="8dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/MyTeam_TextColor" />

    <TextView
        android:id="@+id/GLI_Name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GLI_Leader_Txt"
        android:layout_margin="5dip"
        android:paddingBottom="7dip"
        android:paddingLeft="18dip"
        android:text="@string/GrupID_msg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/MyTeam_TextColor" />

    <TextView
        android:id="@+id/GLI_GroupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/GLI_Name_label"
        android:layout_alignBottom="@+id/GLI_Name_label"
        android:layout_margin="4dip"
        android:layout_toRightOf="@+id/GLI_Name_label"
        android:paddingBottom="7dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/MyTeam_TextColor" />

    <TextView
        android:id="@+id/GLI_MemberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:layout_marginRight="18dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/MyTeam_TextColor" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/GLI_MemberCount"
        android:layout_marginRight="8dip"
        android:text="@string/Members_msg"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/MyTeam_TextColor" />

</RelativeLayout>